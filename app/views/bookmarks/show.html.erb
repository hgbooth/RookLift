<div class="container-fluid">

  <div>
    <div>
      <h1 class="text-white text-center">
        Bookmarked position details
      </h1>
    </div>
  </div>

  <hr>

  <div class = "row">
    
    <!-- table of info about the fen -->
    <div class = "col-md-2 offset-1 text-white bg-dark rounded">
      <div class = "text-left mb-3 mt-3">
        <div>
          <div><a href="/bookmarks"><button class="btn btn-success text-white">Go back</button></a></div>
        </div>
      </div>

      <table class="table table-striped table-dark mt-3">
        <tbody>
          <tr>
            <td>FEN</td>
            <td><%= @the_position.fen %></td>
          </tr>
          <tr>
            <td>Endgame type</td>
            <td><%= @the_position.endgame_type %></td>
          </tr>
          <tr>
            <td>Pieces</td>
            <td><%= @the_position.pieces %></td>
          </tr>
          <tr>
            <td>Material count</td>
            <td><%= @the_position.material_count %></td>
          </tr>
          <tr>
            <td>Created at</td>
            <td><%= time_ago_in_words(@the_position.created_at) %> ago</td>
          </tr>
          <tr>
            <td>Updated at</td>
            <td><%= time_ago_in_words(@the_position.updated_at) %> ago</td>
          </tr>
        </tbody>
      </table>


    </div>

    <div class="col-md-4 offset-1">
      <table class="chessboard">
        <% (0..7).each do |i| %>
          <tr class="chessboard">
          <% (0..7).each do |j| %>
            <td class="chessboard">
              <%# if rook render rook, etc. %>
              <% if @the_board[i][j] != "blank" %>
                <img src="<%= @the_images[i][j] %>" class="piece">
              <% end %>
                          
            </td>
          <% end %>
        <% end %>
      </table>
    </div>


  <div class="col-md-2 offset-1 bg-dark my-auto">
      <form action="/playComputerWhite" target="_blank">
        <input type="hidden" id="fen_box" name="query_fen" value="<%= @the_position.fen %>">
        <button type="submit" class="mt-3 btn bg-white btn-block text-black mb-3">Practice with the white pieces</button>
      </form>
      <form action="/playComputerBlack" target="_blank">
        <input type="hidden" id="fen_box" name="query_fen" value="<%= @the_position.fen %>">
        <button type="submit" class="btn btn-block black-background text-white border-white mb-3">Practice with the black pieces</button>
      </form>
    </div>
  </div>
</div>