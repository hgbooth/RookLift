<div class="container-fluid">
  <div>
    <h1 class="text-white text-center">
      <%= @tag_name %> tag
    </h1>

    <div>
      <div>
        <a href="/bookmarks">
          Go back
        </a>
      </div>
    </div>

  </div>

  <div class = "row">
    <div class = "col-md-6 offset-3 text-white bg-dark rounded">
      <div class = "text-left mb-3 mt-3">
        <h4>Your positions tagged <%= @tag_name %></h4>
      </div>
    </div>
  </div>

  <div class="mt-3 col-md-8 offset-2">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">FEN</th>
          <th scope="col">Pieces</th>
          <th scope="col">Untag</th>
          <th scope="col">Show details</th>
        </tr>
      </thead>
      <tbody>
        <% @users_matching_tags.each do |a_tag| %>
          <tr>
            <td><%= a_tag.bookmark.position.fen %></td>
            <td><%= a_tag.bookmark.position.pieces %></td>
            <td class="text-center"><a href="/delete_tag/<%= a_tag.id %>"><button class="btn btn-danger"><i class="fas fa-trash"></i></button></a></td>
            <td class="text-center"><a href="/bookmarks/<%= a_tag.bookmark.id %>"><button class="btn btn-success"><i class="fas fa-arrow-right"></i></button></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class = "row">
    <div class = "col-md-6 offset-3 text-white bg-dark rounded">
      <div class = "text-left mb-3 mt-3">
        <h4>Other users' positions tagged <%= @tag_name %></h4>
      </div>
    </div>
  </div>

  <div class="mt-3 col-md-8 offset-2">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">FEN</th>
          <th scope="col">Pieces</th>
          <th scope="col">Show details</th>
        </tr>
      </thead>
      <tbody>
        <% @others_matching_tags.each do |a_tag| %>
          <tr>
            <td><%= a_tag.bookmark.position.fen %></td>
            <td><%= a_tag.bookmark.position.pieces %></td>
            <td class="text-center"><a href="/bookmarks/<%= a_tag.bookmark.id %>"><button class="btn btn-success"><i class="fas fa-arrow-right"></i></button></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>

<hr>
