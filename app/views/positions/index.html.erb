<div>
  <div>
    <h1 class="text-white">
      List of all positions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2 class="text-white">
      Add a new position
    </h2>
    <form action="/insert_position" method="post">
      <div class="form-group text-white">
        <label for="fen_box">FEN</label>
        <input type="text" class="form-control bg-dark text-white" id="fen_box" placeholder="Enter position id">
      </div>
      <div class="form-group">
        <label for="type_input">Endgame type</label>
        <select class="form-control bg-dark text-white" id="type_input">
          <option>Elementary</option>
          <option>Practical</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Create position</button>
    </form>
  </div>
</div>

<hr>

<div>
  <div>
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">FEN</th>
          <th scope="col">Material count</th>
          <th scope="col">Pieces</th>
          <th scope="col">Created at</th>
          <th scope="col">Updated at</th>
        </tr>
      </thead>
      <tbody>
      </tr>
      <% @list_of_positions.each do |a_position| %>
        <tr>
          <td><%= a_position.id %></td>
          <td><%= a_position.fen %></td>
          <td><%= a_position.pieces %></td>
          <td><%= time_ago_in_words(a_position.created_at) %> ago</td>
          <td><%= time_ago_in_words(a_position.updated_at) %> ago</td>
          <td><a href="/positions/<%= a_position.id %>">Show details</a></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<hr>
