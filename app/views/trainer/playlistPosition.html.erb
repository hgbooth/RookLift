<div class="container-fluid">
  <div>
    <div>
      <h1 class="text-white text-center">
        Practice position
      </h1>
    </div>
  </div>
  <hr>
  <div class = "row">
    <!-- table of info about the fen -->
    <div class = "col-md-2 offset-1 text-white bg-dark rounded">
      <div class = "text-left mb-3 mt-3"></div>
      
      <h3>Tags in playlist</h3>
      <ul>
        <% @playlistTags.each do |v| %>
          <div class="text-white">
            <li><%= v %></li>
          </div>
        <% end %>
      </ul>
      
      <hr class="border-white">
      
      <h3>Current position:</h3>
      <p><%= @curPosition.fen%></p>
      
      <hr class="border-white">
      <a href="/trainRandom"><button class="btn btn-block btn-primary text-white mb-3">Train another position</button></a>
      <div><a href="/"><button class="btn btn-block btn-success text-white">Return to homepage</button></a></div>
    </div>


    <div class="col-md-4 offset-1">
      <table class="chessboard">
        <% (0..7).each do |i| %>
          <tr class="chessboard">
            <% (0..7).each do |j| %>
              <td class="chessboard">
                <%# if rook render rook, etc. %>
                <% if @the_board[i][j] != "blank" %>
                  <img src="<%= @the_images[i][j] %>" class="piece">
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
    

    <div class="col-md-2 offset-1 bg-dark my-auto">
      <form action="/playComputerWhite" target="_blank">
        <input type="hidden" id="fen_box" name="query_fen" value="<%= @curPosition.fen %>">
        <button type="submit" class="mt-3 btn btn-light btn-block text-black mb-3">Practice with the white pieces</button>
      </form>
      <form action="/playComputerBlack" target="_blank">
        <input type="hidden" id="fen_box" name="query_fen" value="<%= @curPosition.fen %>">
        <button type="submit" class="btn btn-block black-background text-white border-white mb-3">Practice with the black pieces</button>
      </form>
    </div>


    <hr>
  </div>
</div>
