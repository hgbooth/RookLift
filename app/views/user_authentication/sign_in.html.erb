<div class = "container-fluid">
  <div class = "row">
    <div class = "col-md-6 offset-3 text-white rounded text-center font-weight-bold mb-3">
      <h1>Sign in</h1>
    </div>
  </div>

  <div class = "row">
    <div class = "col-md-6 offset-3 text-white bg-dark rounded pt-2">
      <form action="/user_verify_credentials" method="post">
            <div class="form-group text-white">
              <label for="email_box">Email</label>
              <input class="form-control bg-dark text-white" id="email_box" name="query_email" placeholder="Enter your email..." type="email">
            </div>
            <div class="form-group text-white">
              <label for="password_box">Password</label>
              <input class="form-control bg-dark text-white" id="password_box" name="query_password" placeholder="Enter your password..." type="password">
            </div>
            <button type="submit" class="btn btn-primary mb-3">Sign in</button>
      </form>

    </div>
  </div>
  <hr>
  <div class="col-md-6 offset-3 text-white">Or, <a href="/user_sign_up">Sign up</a> instead.</div>

</div>
